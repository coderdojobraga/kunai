---
interface Props {
    name: string;
    picture: string;
    role: string;
}

const { name, picture, role } = Astro.props;
---

<div
    class="w-12/12 xl:w-2/10 mx-auto mb-12 mt-12 px-4 sm:w-6/12 md:w-4/12 lg:mb-0 lg:w-3/12 2xl:w-2/12"
>
    <div class="flex justify-center">
        <img
            alt={name}
            src={`src/assets/team/${picture}`}
            width={300}
            height={300}
            class="mx-auto h-56 w-56 rounded-full object-cover shadow-lg md:h-48 md:w-48"
        />
    </div>
    <div class="p-4 text-center">
        <p class="text-3xl font-bold md:text-2xl lg:text-xl">{name}</p>
        <p
            class="md:text-md mt-1 text-lg font-semibold uppercase text-purple-600 lg:text-sm"
        >
            {role}
        </p>
    </div>
</div>
